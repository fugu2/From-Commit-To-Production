pipeline {
    agent {
        node {
            label 'jenkins-slave2.yvu.ch'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo Build'
                sh 'cd Gadgeothek; ./gradlew build'
            }
        }

        stage('End2End Tests') {
            steps {
                sh 'echo End2End Tests'

            }
        }

        stage('Unit Tests') {
                    steps {
                        sh 'echo End2End Tests'
                        sh '(cd Gadgeothek;./gradlew test)'
                    }
                }
    }
    post {
        success {
            archiveArtifacts '**/outputs/*/*.apk'
        }
    }
}
