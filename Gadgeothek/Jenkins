pipeline {
    agent {
        node {
            label 'jenkins-slave2.yvu.ch'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo Build'
                sh 'cd Gadgeothek; ./gradlew build'
            }
        }

        stage('End2End Tests') {
            steps {
                sh 'echo End2End Tests'
            }
        }
    }
    post {
        success {
            archiveArtifacts 'Gadgeothek/app/build/outputs/*.apk'
        }
    }
}
